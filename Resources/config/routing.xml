<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="debril_rss_atom_stream" pattern="/stream/{contentId}">
        <default key="_controller">DebrilRssAtomBundle:Stream:index</default>
        <default key="contentId">null</default>
    </route>

    <route id="debril_rss_atom_atom" pattern="/atom/{contentId}">
        <default key="_controller">DebrilRssAtomBundle:Stream:index</default>
        <default key="format">atom</default>
        <default key="contentId">null</default>
    </route>

    <route id="debril_rss_atom_rss" pattern="/rss/{contentId}">
        <default key="_controller">DebrilRssAtomBundle:Stream:index</default>
        <default key="format">rss</default>
        <default key="contentId">null</default>
    </route>

    <route id="debril_rss_atom_validate" pattern="/validate">
        <default key="_controller">DebrilRssAtomBundle:Default:index</default>
    </route>
</routes>
